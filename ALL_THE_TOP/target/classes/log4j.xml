<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	
	<!-- DailyFile Appenders -->
	<appender name="dailyLogAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/var/lib/tomcat9/logs/alltt/alltt_log.log" />
		<param name="Append" value="true"/>
		<layout class="org.apache.log4j.PatternLayout">
		  <param name="DatePattern"   value="'.'yyyy-MM-dd-HH-mm"/>
		  <param name="ConversionPattern"   value="[%d{HH:mm:ss}][%-5p](%F:%L)-%m%n"/>
		</layout>
	</appender>
	
	<!-- crawling log Appenders -->
	<appender name="crawlingLogAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/var/lib/tomcat9/logs/alltt/crawling/crawling_log.log" />
		<param name="Append" value="true"/>
		<layout class="org.apache.log4j.PatternLayout">
		  <param name="DatePattern"   value="'.'yyyy-MM-dd-HH-mm"/>
		  <param name="ConversionPattern"   value="[%d{HH:mm:ss}][%-5p](%F:%L)-%m%n"/>
		</layout>
	</appender>
	
	<!-- Application Loggers -->
	<logger name="com.app.alltt">
		<level value="info" />
	</logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.beans">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="info" />
	</logger>

	<logger name="org.springframework.web">
		<level value="info" />
	</logger>

	<logger name="org.springframework.security">
		<level value="info" />
	</logger>
	
	<logger name="com.app.alltt.crawling.service.CrawlingServiceImpl">
		<level value="info"/>
		<appender-ref ref="crawlingLogAppender"/>
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="warn" />
		<appender-ref ref="console" />
		<appender-ref ref="dailyLogAppender"/>
	</root>
	
</log4j:configuration>